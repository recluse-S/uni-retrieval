}
.pay-btn:hover {
	background-color: #2980b9;
}
.dynamic {
	font-size: 14px;
	margin-left: 5px;
	font-weight: bold;
	background: linear-gradient(90deg, #f6542d, #ebeb41, #f6542d);
	background-size: 200% 100%;
	background-position: -100% 0;
	color: transparent;
	-webkit-background-clip: text;
	-webkit-animation: colorWave 3s ease-in-out infinite;
	        animation: colorWave 3s ease-in-out infinite;
	font-style: italic;
}
@-webkit-keyframes colorWave {
0% {
		color: #f6542d;
}
50% {
		color: #ebeb41;
		/* 可以调整为其他颜色 */
}
100% {
		color: #f6542d;
}
}
@keyframes colorWave {
0% {
		color: #f6542d;
}
50% {
		color: #ebeb41;
		/* 可以调整为其他颜色 */
}
100% {
		color: #f6542d;
}
}

